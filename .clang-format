BasedOnStyle: LLVM
IndentWidth: 4
TabWidth: 4
UseTab: Never
BreakBeforeBraces: Allman
ColumnLimit: 1000

# Disable bin-packing for parameters and arguments
BinPackParameters: false
BinPackArguments: false

# Encourage fewer line breaks for function parameters
PenaltyBreakBeforeFirstCallParameter: 200
PenaltyExcessCharacter: 10000

# Let short functions stay on one line if they fit
AllowShortFunctionsOnASingleLine: All
